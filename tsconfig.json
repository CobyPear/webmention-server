{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"outDir": "build",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
